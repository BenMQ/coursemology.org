<h3>Milestone</h3>
<div class="row">
  <div class="span3">
    <h4>Title</h4>
  </div>
  <div class="span3 offset1">
    <h4>End Date</h4>
  </div>
</div>
<div class="row">
  <div class="span3">
    <% if !milestone.is_virtual? %>
      <input name="milestones[<%= milestone.id %>][title]" type="text" required="true" value="<%= milestone.title %>">
    <% else %>
      <h4><%= milestone.title %></h4>
    <% end %>
  </div>
  <div class="span3 offset1">
    <% if !milestone.is_virtual? %>
    <div class="datepicker input-append date">
      <input name="milestones[<%= milestone.id %>][end_at]" type="datetime" required="true" value="<%= milestone.end_at.strftime('%d-%m-%Y') %>">
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
    <% end %>
  </div>
</div>
<div>
  <h4>Description</h4>
  <textarea class="text_field html-editor span7" rows="5">
    <%= milestone.description %>
  </textarea>
</div>
<% if milestone.entries.length > 0 %>
<div>
  <h4>Entries</h4>
  <% milestone.entries.each { |entry| %>
  <%= render :partial => "lesson_plan/overview_entry", :locals => { :entry => entry } %>
  <% } %>
</div>
<% end %>
<hr class="hr-shrink-margin">