<tr>
  <th><%= entry.start_at %> - <%= entry.end_at %></th>
  <td>
    <h2><%= entry.title %> <small><%= LessonPlanEntry::ENTRY_TYPES[entry.entry_type][0] %></small></h2>
    <h3><%= entry.location %></h3>
    <%= entry.description %>
  </td>
<% if can? :manage, LessonPlanEntry %>
  <td>
    <%= link_to edit_course_lesson_plan_entry_path(@course, entry), class: 'btn' do %>
      <i class="icon-edit"></i>
    <% end %>
  </td>
  <td>
    <%= link_to course_lesson_plan_entry_path(@course, entry),
                method: :delete,
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                class: 'btn btn-danger' do %>
        <i class="icon-trash"></i>
    <% end %>
  </td>
<% end %>
</tr>
