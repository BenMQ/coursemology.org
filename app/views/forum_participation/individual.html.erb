<div class="page-header">

  <table>
    <tr>
      <td>
        <img class="user-profile-pic"
             src="<%= @user_course.user.get_profile_photo_url %>" />
      </td>
      <td style="padding-left: 10px">
        <% if @user_course.user.uid %>
          <a id="student-large" href="https://www.facebook.com/<%= @user_course.user.uid %>"><%= @user_course.name %></a>
        <% else %>
          <h3><%= @user_course.name %></h3>
        <% end %>
        <p><%= @user_course.user.email %></p>
      </td>
    </tr>
  </table>
  <h3>
    <%= date_dmy_to_readable_format @from_date %> to <%= date_dmy_to_readable_format @to_date %>
  </h3>
</div>

<table class="table" id="dg-std-table">
  <thead>
  <th>
    Post title
  </th>
  <th>
    Date Posted
  </th>
  </thead>
  <tbody>
  <% if (@result.length == 0) %>
    <tr>
      <td colspan="2">
        No posts found.
      </td>
    </tr>
  <% end %>
  <% @result.each do |topic| %>
    <% topic.posts.each do |post| %>
      <tr>
        <td>
          <%=raw forem_format(post.text) %>
        </td>
        <td>
          <%= link_to datetime_no_seconds(post.created_at) , main_app.course_forum_topic_path(@course, topic.forum, topic.id) %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>