<h4>
  <% if @is_subfolder_new[subfolder.id] %>
      <input type="hidden" class="new_<%= subfolder.class.model_name.human.pluralize %>" />
      <img class="asm-new-icon" src="http://c.dryicons.com/images/icon_sets/colorful_stickers_part_3_icons_set/png/48x48/promotion_new.png" alt="New!" />
  <% end %>
  <i class="<%= subfolder.can_student_upload? ? 'icon-upload' : 'icon-folder-open' %>"></i> <%= subfolder.name %>
  <%= subfolder.is_open? ? '' : '<span class="label">Closed</span>'.html_safe %>
</h4>
