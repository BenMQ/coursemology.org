<div class="row" >
  <div class="span2 sidebar">
    <%= render "layouts/course_side_bar" %>
  </div>

  <div class="span10 span-content">
    <div class="course-title">
      <a href="<%= course_path(@course) %>">
        <%= @course.title %>
      </a>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-error">
          <%= flash[:error] %>
        </div>
    <% end %>
    <div style="clearfix" class="content"/>
    <%= yield %>
  </div>
  <%= render "layouts/course_popup" %>
</div>

