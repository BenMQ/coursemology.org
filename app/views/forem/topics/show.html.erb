<script>
  forum.topicPath = "<%= main_app.course_forum_topic_path(@course, @forum, @topic) %>";
</script>
<div id='topic' class='<%= 'un' unless @topic.locked? %>locked'>
  <div id='menu' class="pull-right">
    <div class='btn-group'>
      <% if @topic.can_be_replied_to? %>
        <%= link_to t(".reply"), main_app.new_course_forum_topic_post_path(@course, @forum, @topic), :class => "btn" %>
      <% end %>
      <% if @topic.user == forem_user || forem_admin? %>
        <%= link_to t(".delete"), main_app.course_forum_topic_path(@course, @forum, @topic), :method => :delete, data: { :confirm => t("are_you_sure") }, :class => "btn btn-danger" %>
      <% end %>
      <% if forem_user %>
        <!--<% if !@topic.subscriber?(forem_user.id) %>
          <%= link_to t(".subscribe"), main_app.course_forum_topic_subscribe_path(@course, @forum, @topic), :class => "btn btn-success" %>
        <% else %>
          <%= link_to t(".unsubscribe"), main_app.course_forum_topic_unsubscribe_path(@course, @forum, @topic), :class => "btn btn-danger" %>
        <% end %>-->
      <% end %>
      <% if forem_admin? %>
        <!--<%= link_to t('forem.topic.links.edit'), forem.edit_admin_topic_path(@topic), :class => "btn" %>-->
        <%= link_to t(".hide.#{@topic.hidden}"), main_app.course_forums_topics_admin_hide_path(@course, @forum, @topic), :method => :put, :class => "btn" %>
        <%= link_to t(".lock.#{@topic.locked}"), main_app.course_forums_topics_admin_lock_path(@course, @forum, @topic), :method => :put, :class => "btn" %>
        <%= link_to t(".pin.#{@topic.pinned}"), main_app.course_forums_topics_admin_pin_path(@course, @forum, @topic), :method => :put, :class => "btn" %>
      <% end %>
    </div>

  </div>

  <%= render :partial => 'forem/topics/head', :locals => { :topic => @topic } %>

  <% if @topic.pending_review? %>
    <div class="moderation alert" id='topic_moderation'>
      <%= t(".pending_review") %>
      <% if forem_admin_or_moderator?(@topic.forum) %>
        <%= form_for @topic, :url => forem.moderate_forum_topic_path(@topic.forum, @topic), :method => :put do |f| %>
          <%= render "/forem/moderation/options", :f => f %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= forem_pages_widget(@posts) %>

  <div id='posts'>
    <%= render :partial => "forem/posts/post", :collection => @posts %>
  </div>

  <%= forem_pages_widget(@posts) %>
</div>
