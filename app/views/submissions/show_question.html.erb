<div class="page-header">
  <h1>Submission</h1>
</div>

<table>
  <tr><td>Student: </td><td><%= @submission.student.name %></td></tr>
  <tr><td>Submited at: </td><td><%= @submission.created_at %></td></tr>
  <% if @grading %>
    <tr>
      <td>Total grade: </td>
      <td>
        <%= @grading.total_grade %> / <%= @mission.max_grade %>
        <%= link_to "Update",
            edit_course_mission_submission_submission_grading_path(@course, @mission, @submission, @grading)
            %>
      </td>
    </tr>
    <tr><td>Grader: </td><td><%= @grading.grader.name %></td></tr>
  <% end %>
</table>
<hr/>

<p class="well"><%= @mission.description.html_safe %></p>

<% @qadata.each do |qid, qa| %>
  <h4>Question:</h4>
  <p><%= qa[:q].description.html_safe %></p>
  <h4>Answer:</h4>
  <p><%= qa[:a].text %></p>
  <% if @grading %>
    <% if qa[:g] %>
      <p><strong>Grade: </strong><%= qa[:g].grade %> / <%= qa[:q].max_grade %></p>
      <% if qa[:g].comment %>
        <strong>Comment:</strong><p><%= qa[:g].comment %></p>
      <% end %>
    <% end %>
  <% end %>
  <hr/>
<% end %>
