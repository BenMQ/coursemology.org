        });
        $("#fullscreen-link").click(function(){
            cv.fullScreen();
            return false;
        });
        $("#toggle-comment").click(function(){
            var $this = $(this);
            if ($this.hasClass('disabled')){
                $this.removeClass("disabled");
                cv.showAnnotation();
            }else{
                cv.hideAnnotation();
                $this.addClass('disabled');
            }
            return false;
        });
