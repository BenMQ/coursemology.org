<%= form_for [@course, folder_to_change], :html => { :class => 'form-horizontal' }, :url => course_material_create_path(@course, @folder), :method => subfolder_method do |f| %>
  <div class="modal-body">
  <div class="row-fluid control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field span10', :required => 'required' %>
    </div>
  </div>
  <div class="row-fluid control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field html-editor span10', :rows => 10 %>
    </div>
  </div>
  </div>
  <div class="modal-footer">
    <%= hidden_field_tag :type, :subfolder %>
    <%= f.submit nil, :class => 'btn btn-primary', data: {disable_with: "Submitting..."} %>
    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
  </div>
<% end %>
