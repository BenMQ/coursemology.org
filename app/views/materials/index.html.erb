<%- model_class = MaterialFolder -%>
<div class="page-header">
  <h1>Workbin: <%= @folder.name %><%= @folder.is_open? ? '' : '<span class="label">Closed</span>'.html_safe %></h1>
  <% if @folder.description %>
  <div>
    <p><%= @folder.description.html_safe %></p>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="span2">
    <%= render :partial => 'folder_tree' %>
  </div>
  <div class="span7">
    <%= render :partial => 'folder_controls' %>
    <%= render :partial => 'folder_listing' %>
  </div>
</div>
