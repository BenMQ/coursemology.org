<div id="create-subfolder-modal">
  <%= form_for [@course, @subfolder], :html => { :class => 'form-horizontal' }, :url => course_material_create_path(@course, @folder), :method => subfolder_method do |f| %>
  <div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field span7', :required => 'required' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :can_student_upload, 'Students can Upload', :class => 'control-label' %>
    <div class="controls checkbox-text">
      <%= f.check_box :can_student_upload, :class => 'checkbox' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :open_at, :class => 'control-label' %>
    <div class="controls">
      <div class="datetimepicker-past input-append date">
        <% if @subfolder.close_at %>
          <%= f.text_field :open_at, :class => 'text_field', :value => datetime_format(@subfolder.open_at) %>
        <% else %>
          <%= f.text_field :open_at, :class=> 'text_field' %>
        <% end %>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :close_at, :class => 'control-label' %>
    <div class="controls">
      <div class="datetimepicker-past input-append date">
        <% if @subfolder.close_at %>
          <%= f.text_field :close_at, :class => 'text_field', :value => datetime_format(@subfolder.close_at) %>
        <% else %>
          <%= f.text_field :close_at, :class=> 'text_field' %>
        <% end %>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field html-editor span7', :rows => 10 %>
    </div>
  </div>
  </div>
  <div class="form-actions">
    <%= hidden_field_tag :type, :subfolder %>
    <%= f.submit "Submit", :class => 'btn btn-primary', data: {disable_with: "Submitting..."} %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_material_folder_path(@course, @folder.parent_folder), :class => 'btn' %>
  </div>
<% end %>
</div>
