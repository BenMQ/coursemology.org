<div class="page-header">
  <h1>My Students<h1>
</div>

<%= render "add_student" %>

<%= form_for(@course, url: course_manage_update_exp_path,
             html: { method: :post, class: "form-horizontal" } ) do |f| %>
    <table class="table" id="dg-std-table">
      <thead>
      <th>
        Name
      </th>
      <th>
        Level
      </th>
      <th>
        Exp
      </th>
      <th>
        Email
      </th>
      <th>
        Add Exp
      </th>
      </thead>
      <tbody>
      <% @my_std_courses.each do |std_course| %>
          <tr>
            <td><%= link_to std_course.user.name,course_user_course_path(@course,std_course),id:std_course.id %></td>
            <td><%= std_course.level ? std_course.level.level - 1 : 0 %></td>
            <td><%= std_course.exp %></td>
            <td><%= std_course.user.email %></td>
            <td><input type="number" name="EXP[<%= std_course.id %>]" title="EXP amount" class="input-mini" min="1"> </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= f.label :Reason, style:"display: inline-block;"%>
    <input type="text" class="text_field" name="reason">
    <%= f.submit "Update EXP", :class => 'btn btn-primary'%>
<% end %>
